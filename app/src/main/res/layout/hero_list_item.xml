<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hero_list_item_height"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/hero_list_item_height"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hero_avatar"
            android:layout_width="@dimen/hero_avatar_size"
            android:layout_height="@dimen/hero_avatar_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/or_tc"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/hero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/hero_name_font_size"
            android:textColor="@color/colorPrimary"/>

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:src="@drawable/ic_play_arrow"/>

</LinearLayout>